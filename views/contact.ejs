<%- include('./partials/header') %>

<div class="container py-5">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <h1 class="text-center mb-5">Contact Us</h1>
      
      <div class="row mb-5">
        <div class="col-md-4 mb-4 mb-md-0">
          <div class="card h-100 text-center">
            <div class="card-body">
              <i class="fas fa-map-marker-alt fa-3x text-primary mb-3"></i>
              <h5 class="card-title">Visit Us</h5>
              <p class="card-text">
                123 Electronics Street<br>
                Tech City, TC 12345<br>
                India
              </p>
            </div>
          </div>
        </div>
        <div class="col-md-4 mb-4 mb-md-0">
          <div class="card h-100 text-center">
            <div class="card-body">
              <i class="fas fa-phone fa-3x text-primary mb-3"></i>
              <h5 class="card-title">Call Us</h5>
              <p class="card-text">
                +1 234 567 8900<br>
                +1 234 567 8901
              </p>
              <p class="text-muted">
                Mon-Fri: 9:00 AM - 6:00 PM<br>
                Sat: 10:00 AM - 4:00 PM
              </p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card h-100 text-center">
            <div class="card-body">
              <i class="fas fa-envelope fa-3x text-primary mb-3"></i>
              <h5 class="card-title">Email Us</h5>
              <p class="card-text">
                info@electroshop.com<br>
                support@electroshop.com
              </p>
              <p class="text-muted">
                We'll respond as soon as possible
              </p>
            </div>
          </div>
        </div>
      </div>
      
      <div class="card">
        <div class="card-body">
          <h2 class="card-title mb-4">Send Us a Message</h2>
          <form action="/contact" method="POST">
            <div class="row mb-3">
              <div class="col-md-6 mb-3 mb-md-0">
                <label for="name" class="form-label">Your Name</label>
                <input type="text" class="form-control" id="name" name="name" required>
              </div>
              <div class="col-md-6">
                <label for="email" class="form-label">Your Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
              </div>
            </div>
            <div class="mb-3">
              <label for="subject" class="form-label">Subject</label>
              <input type="text" class="form-control" id="subject" name="subject" required>
            </div>
            <div class="mb-3">
              <label for="message" class="form-label">Message</label>
              <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Send Message</button>
          </form>
        </div>
      </div>
      
      <div class="mt-5">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title mb-4">Find Us</h2>
            <div class="ratio ratio-16x9">
              <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3022.2147850761397!2d-73.98776738459377!3d40.75790197932724!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c25855c6480299%3A0x55194ec5a1ae072e!2sTimes%20Square!5e0!3m2!1sen!2sus!4v1649089178584!5m2!1sen!2sus" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
